{
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es2020.bigint",
      "DOM"
    ],
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "build",
    "build-dex",
    "*.excl",
    "node_modules",
    ".secrets.js"
  ]
}
